<h1 style="margin-bottom:40px">Welcome</h1>
<p style="margin-bottom:40px;font-size:25px">Planning a long trip?</p>

<form action="results.json">

  <div class="container" style="height:auto">
    <div class="container" id="left">
      <p>Enter Start Location (City, State)</p>
      <p><input type="text" name="start"></input></p>
    </div>
    <div class="container" id="right">
      <p>Enter Your Destination (City, State)</p>
      <p><input type="text" name="stop"></input></p>
    </div>
  </div>

  <div class="container" style="height:auto">
    <div class="container" id="left">
      <p>Enter Your MPG</p>
      <p><input type="text" name="mpg"></input></p>
    </div>
    <div class="container" id="right">
      <p style="display:inline-block;font-size:length">Enter Your Fuel Type</p>
      <p><input type="text" name="fuel_type"></input></p>
    </div>
  </div>

  <div class="container" style="height:auto">
    <div class="container" id="left">
      <p>Enter Origin Airport Code</p>
      <p><input type="text" name="start_code"></input></p>
    </div>
    <div class="container" id="right">
      <p style="display:inline-block;font-size:length">Enter Destination Airport Code</p>
      <p><input type="text" name="end_code"></input></p>
    </div>
  </div>

  <div class="container" style="height:auto">
    <div class="container" id="center">
      <p>Enter Date of Travel (YYYY-MM-DD)</p>
      <p><input type="text" name="date"></input></p>
    </div>
  </div>

  <input type="submit" value="Submit" class="btn btn-default btn-lg" style="width:200px">

</form>
